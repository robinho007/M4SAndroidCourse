<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="asynctaskproject.mobilesenegal.sn.asynctaskproject.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:longClickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASYNCTASK EXAMPLE"
        android:id="@+id/title"
        android:textSize="22dp"
        android:textColor="#FF9955" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telecharger l&apos;image"
        android:id="@+id/btnOK"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:minHeight="150dp"
        android:minWidth="300dp"
        android:background="#e1ccbe"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
